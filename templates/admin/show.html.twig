{% extends 'base.html.twig' %}

{% block title %}Admin Details{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-person-badge"></i> Admin Details</h1>
    <div>
        <a href="{{ path('app_admin_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to list
        </a>
        <a href="{{ path('app_admin_edit', {'id': admin.id}) }}" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Edit
        </a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Admin #{{ admin.id }}</h4>
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th class="bg-light" style="width: 200px;">Id</th>
                    <td>{{ admin.id }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Nom</th>
                    <td>{{ admin.nom }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Email</th>
                    <td>{{ admin.user ? admin.user.email : 'N/A' }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

