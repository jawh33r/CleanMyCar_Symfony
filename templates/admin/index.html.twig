{% extends 'base.html.twig' %}

{% block title %}Admins{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-person-badge"></i> Admins</h1>
    <a href="{{ path('app_admin_new') }}" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> New Admin
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        {% if admins|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Email</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for admin in admins %}
                            <tr>
                                <td>{{ admin.id }}</td>
                                <td>{{ admin.nom }}</td>
                                <td>{{ admin.user ? admin.user.email : 'N/A' }}</td>
                                <td class="text-end">
                                    <a href="{{ path('app_admin_show', {'id': admin.id}) }}" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i> Show
                                    </a>
                                    <a href="{{ path('app_admin_edit', {'id': admin.id}) }}" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <form method="post" action="{{ path('app_admin_delete', {'id': admin.id}) }}" onsubmit="return confirm('Are you sure you want to delete this admin?');" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ admin.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> No admins found. <a href="{{ path('app_admin_new') }}">Create the first one</a>.
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}

