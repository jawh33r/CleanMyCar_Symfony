{% extends 'base.html.twig' %}

{% block title %}Modifier Mon Profil - Ouvrier{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-pencil"></i> Modifier Mes Informations Ouvrier</h1>
    <a href="{{ path('app_ouvrier_profile_index') }}" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Retour au profil
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-warning text-dark">
        <h4 class="mb-0">Informations Ouvrier</h4>
    </div>
    <div class="card-body">
        {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nom) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.zoneService, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.zoneService, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.zoneService) }}
            <small class="form-text text-muted">Ex: Casablanca, Rabat, Marrakech, etc.</small>
        </div>
        <div class="mb-3">
            <div class="form-check">
                {{ form_widget(form.disponible, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(form.disponible, null, {'label_attr': {'class': 'form-check-label'}}) }}
            </div>
            {{ form_errors(form.disponible) }}
        </div>
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-warning">
                <i class="bi bi-check-circle"></i> Enregistrer
            </button>
            <a href="{{ path('app_ouvrier_profile_index') }}" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Annuler
            </a>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}


