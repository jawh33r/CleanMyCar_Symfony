{% extends 'base.html.twig' %}

{% block title %}Mon Profil - Ouvrier{% endblock %}

{% block body %}
<div class="mb-4">
    <h1><i class="bi bi-person-circle"></i> Mon Profil - Ouvrier</h1>
</div>

<div class="row">
    <!-- Left Column: User, Client and Ouvrier Info -->
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm mb-3">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="bi bi-info-circle"></i> Informations Utilisateur</h4>
            </div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tr>
                        <th class="text-muted" style="width: 40%;">Email:</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th class="text-muted">Rôle:</th>
                        <td>
                            {% for role in user.roles %}
                                <span class="badge bg-info">{{ role }}</span>
                            {% endfor %}
                        </td>
                    </tr>
                </table>
            </div>
        </div>

        {% if client %}
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="bi bi-person"></i> Informations Client</h4>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <th class="text-muted" style="width: 40%;">Nom:</th>
                            <td><strong>{{ client.nom }}</strong></td>
                        </tr>
                        <tr>
                            <th class="text-muted">ID Client:</th>
                            <td>#{{ client.id }}</td>
                        </tr>
                    </table>
                </div>
            </div>
        {% endif %}

        <div class="card shadow-sm">
            <div class="card-header bg-warning text-dark">
                <h4 class="mb-0"><i class="bi bi-tools"></i> Informations Ouvrier</h4>
            </div>
            <div class="card-body">
                {% if ouvrier %}
                    <table class="table table-borderless">
                        <tr>
                            <th class="text-muted" style="width: 40%;">Nom:</th>
                            <td><strong>{{ ouvrier.nom }}</strong></td>
                        </tr>
                        <tr>
                            <th class="text-muted">Zone:</th>
                            <td>{{ ouvrier.zoneService ?: 'Non définie' }}</td>
                        </tr>
                        <tr>
                            <th class="text-muted">Statut:</th>
                            <td>
                                {% if ouvrier.disponible %}
                                    <span class="badge bg-success">Disponible</span>
                                {% else %}
                                    <span class="badge bg-danger">Indisponible</span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th class="text-muted">ID Ouvrier:</th>
                            <td>#{{ ouvrier.id }}</td>
                        </tr>
                    </table>
                    <div class="d-grid mt-3">
                        <a href="{{ path('app_ouvrier_profile_edit') }}" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Modifier mes informations
                        </a>
                    </div>
                {% else %}
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Aucune information ouvrier trouvée.
                    </div>
                    <div class="d-grid">
                        <a href="{{ path('app_ouvrier_profile_edit') }}" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Ajouter mes informations ouvrier
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Right Column: Reservations History -->
    <div class="col-md-8 mb-4">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0"><i class="bi bi-calendar-check"></i> Historique des Réservations</h4>
                <a href="{{ path('app_ouvrier_reservations_index') }}" class="btn btn-light btn-sm">
                    <i class="bi bi-calendar-plus"></i> Gérer les réservations
                </a>
            </div>
            <div class="card-body">
                {% if reservations|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Date</th>
                                    <th>Heure</th>
                                    <th>Service</th>
                                    <th>Client</th>
                                    <th>Adresse</th>
                                    <th>Montant</th>
                                    <th>Statut</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for reservation in reservations %}
                                    <tr>
                                        <td>#{{ reservation.id }}</td>
                                        <td>{{ reservation.date ? reservation.date|date('d/m/Y') : '' }}</td>
                                        <td>{{ reservation.heure ? reservation.heure|date('H:i') : '' }}</td>
                                        <td>{{ reservation.typeService }}</td>
                                        <td>{{ reservation.client.nom }}</td>
                                        <td>
                                            {% if reservation.adresse|length > 30 %}
                                                {{ reservation.adresse|slice(0, 30) }}...
                                            {% else %}
                                                {{ reservation.adresse }}
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if reservation.montant %}
                                                <strong>{{ reservation.montant|number_format(2, ',', ' ') }} TND</strong>
                                            {% else %}
                                                <span class="text-muted">-</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if reservation.statut == 'En attente' %}
                                                <span class="badge bg-warning">{{ reservation.statut }}</span>
                                            {% elseif reservation.statut == 'Confirmée' %}
                                                <span class="badge bg-info">{{ reservation.statut }}</span>
                                            {% elseif reservation.statut == 'En cours' %}
                                                <span class="badge bg-primary">{{ reservation.statut }}</span>
                                            {% elseif reservation.statut == 'Terminée' %}
                                                <span class="badge bg-success">{{ reservation.statut }}</span>
                                            {% elseif reservation.statut == 'Annulée' %}
                                                <span class="badge bg-danger">{{ reservation.statut }}</span>
                                            {% else %}
                                                <span class="badge bg-secondary">{{ reservation.statut }}</span>
                                            {% endif %}
                                        </td>
                                        <td class="text-end">
                                            <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}" class="btn btn-sm btn-info">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="alert alert-info text-center">
                        <i class="bi bi-info-circle"></i> Aucune réservation pour le moment.
                        <br>
                        <a href="{{ path('app_ouvrier_reservations_index') }}" class="btn btn-primary mt-2">
                            <i class="bi bi-calendar-plus"></i> Voir les réservations disponibles
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

