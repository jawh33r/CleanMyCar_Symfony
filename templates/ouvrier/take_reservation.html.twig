{% extends 'base.html.twig' %}

{% block title %}Prendre une Réservation - CleanMyCar{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0"><i class="bi bi-hand-thumbs-up"></i> Prendre la Réservation</h4>
            </div>
            <div class="card-body">
                <div class="mb-4">
                    <h5>Détails de la réservation</h5>
                    <table class="table table-sm">
                        <tr>
                            <th>ID:</th>
                            <td>#{{ reservation.id }}</td>
                        </tr>
                        <tr>
                            <th>Date:</th>
                            <td>{{ reservation.date ? reservation.date|date('d/m/Y') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Heure:</th>
                            <td>{{ reservation.heure ? reservation.heure|date('H:i') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Service:</th>
                            <td>{{ reservation.typeService }}</td>
                        </tr>
                        <tr>
                            <th>Client:</th>
                            <td>{{ reservation.client.nom }}</td>
                        </tr>
                        <tr>
                            <th>Adresse:</th>
                            <td>{{ reservation.adresse }}</td>
                        </tr>
                    </table>
                </div>

                <hr>

                <h5 class="mb-3">Entrez le montant</h5>
                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.montant, null, {'label_attr': {'class': 'form-label'}}) }}
                    <div class="input-group">
                        {{ form_widget(form.montant, {'attr': {'class': 'form-control'}}) }}
                        <span class="input-group-text">TND</span>
                    </div>
                    {{ form_errors(form.montant) }}
                    <small class="form-text text-muted">Entrez le montant pour cette réservation</small>
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Confirmer et Prendre
                    </button>
                    <a href="{{ path('app_ouvrier_reservations_index') }}" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Annuler
                    </a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

