{% extends 'base.html.twig' %}

{% block title %}Edit Ouvrier{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-pencil-square"></i> Edit Ouvrier</h1>
    <div>
        <a href="{{ path('app_ouvrier_show', {'id': ouvrier.id}) }}" class="btn btn-info">
            <i class="bi bi-eye"></i> Show
        </a>
        <a href="{{ path('app_ouvrier_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to list
        </a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Edit Ouvrier #{{ ouvrier.id }}</h4>
    </div>
    <div class="card-body">
        {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nom) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.zoneService, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.zoneService, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.zoneService) }}
        </div>
        <div class="mb-3">
            <div class="form-check">
                {{ form_widget(form.disponible, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(form.disponible, null, {'label_attr': {'class': 'form-check-label'}}) }}
            </div>
            {{ form_errors(form.disponible) }}
        </div>
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle"></i> Save Changes
            </button>
            <a href="{{ path('app_ouvrier_index') }}" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}


