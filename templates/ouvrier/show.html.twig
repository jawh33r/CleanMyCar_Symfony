{% extends 'base.html.twig' %}

{% block title %}Ouvrier Details{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-tools"></i> Ouvrier Details</h1>
    <div>
        <a href="{{ path('app_ouvrier_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to list
        </a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Ouvrier #{{ ouvrier.id }}</h4>
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th class="bg-light" style="width: 200px;">Id</th>
                    <td>{{ ouvrier.id }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Nom</th>
                    <td>{{ ouvrier.nom }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Zone Service</th>
                    <td>{{ ouvrier.zoneService }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Disponible</th>
                    <td>
                        {% if ouvrier.disponible %}
                            <span class="badge bg-success">Disponible</span>
                        {% else %}
                            <span class="badge bg-danger">Indisponible</span>
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th class="bg-light">Reservations</th>
                    <td>
                        <span class="badge bg-info">{{ reservationCount }}</span>
                        {% if reservations|length > 0 %}
                            <ul class="mt-2 mb-0">
                                {% for reservation in reservations %}
                                    <li>
                                        <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}">
                                            Reservation #{{ reservation.id }} - {{ reservation.date ? reservation.date|date('Y-m-d') : 'N/A' }}
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <p class="text-muted mb-0 mt-2">Aucune réservation assignée</p>
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

