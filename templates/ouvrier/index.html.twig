{% extends 'base.html.twig' %}

{% block title %}Ouvriers{% endblock %}

{% block body %}
<div class="mb-4">
    <h1><i class="bi bi-tools"></i> Ouvriers</h1>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        {% if ouvriers|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Nom</th>
                            <th>Zone Service</th>
                            <th>Disponible</th>
                            <th>Reservations</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for ouvrier in ouvriers %}
                            <tr>
                                <td>{{ ouvrier.nom }}</td>
                                <td>{{ ouvrier.zoneService }}</td>
                                <td>
                                    {% if ouvrier.disponible %}
                                        <span class="badge bg-success">Disponible</span>
                                    {% else %}
                                        <span class="badge bg-danger">Indisponible</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="badge bg-info">{{ reservationCounts[ouvrier.id] ?? 0 }}</span>
                                </td>
                                <td class="text-end">
                                    <a href="{{ path('app_ouvrier_show', {'id': ouvrier.id}) }}" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i> Show
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> No ouvriers found. <a href="{{ path('app_ouvrier_new') }}">Create the first one</a>.
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}

