{% extends 'base.html.twig' %}

{% block title %}Edit Avis{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-pencil-square"></i> Edit Avis</h1>
    <div>
        <a href="{{ path('app_avis_show', {'id': avi.id}) }}" class="btn btn-info">
            <i class="bi bi-eye"></i> Show
        </a>
        <a href="{{ path('app_avis_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to list
        </a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Edit Avis #{{ avi.id }}</h4>
    </div>
    <div class="card-body">
        {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.note, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.note, {'attr': {'class': 'form-control', 'min': 1, 'max': 5}}) }}
            {{ form_errors(form.note) }}
            <small class="form-text text-muted">Note between 1 and 5</small>
        </div>
        <div class="mb-3">
            {{ form_label(form.commentaire, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.commentaire, {'attr': {'class': 'form-control', 'rows': 5}}) }}
            {{ form_errors(form.commentaire) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.reservation, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.reservation, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(form.reservation) }}
        </div>
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle"></i> Save Changes
            </button>
            <a href="{{ path('app_avis_index') }}" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}


