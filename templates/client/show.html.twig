{% extends 'base.html.twig' %}

{% block title %}Client Details{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-person"></i> Client Details</h1>
    <div>
        <a href="{{ path('app_client_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to list
        </a>
        <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Edit
        </a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Client #{{ client.id }}</h4>
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th class="bg-light" style="width: 200px;">Id</th>
                    <td>{{ client.id }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Nom</th>
                    <td>{{ client.nom }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Email</th>
                    <td>{{ client.email }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Reservations</th>
                    <td>
                        <span class="badge bg-info">{{ client.reservations|length }}</span>
                        {% if client.reservations|length > 0 %}
                            <ul class="mt-2 mb-0">
                                {% for reservation in client.reservations %}
                                    <li>
                                        <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}">
                                            Reservation #{{ reservation.id }} - {{ reservation.date|date('Y-m-d') }}
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
{% endblock %}


