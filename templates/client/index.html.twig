{% extends 'base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-people"></i> Clients</h1>
    <a href="{{ path('app_client_new') }}" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> New Client
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        {% if clients|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Email</th>
                            <th>Reservations</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for client in clients %}
                            <tr>
                                <td>{{ client.id }}</td>
                                <td>{{ client.nom }}</td>
                                <td>{{ client.email }}</td>
                                <td>
                                    <span class="badge bg-info">{{ client.reservations|length }}</span>
                                </td>
                                <td class="text-end">
                                    <a href="{{ path('app_client_show', {'id': client.id}) }}" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i> Show
                                    </a>
                                    <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <form method="post" action="{{ path('app_client_delete', {'id': client.id}) }}" onsubmit="return confirm('Are you sure you want to delete this client?');" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> No clients found. <a href="{{ path('app_client_new') }}">Create the first one</a>.
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
