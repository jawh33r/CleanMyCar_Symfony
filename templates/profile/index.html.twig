{% extends 'base.html.twig' %}

{% block title %}Mon Profil - CleanMyCar{% endblock %}

{% block body %}
<div class="mb-4">
    <h1><i class="bi bi-person-circle"></i> Mon Profil</h1>
</div>

<div class="row">
    <!-- Left Column: User and Client Info -->
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="bi bi-info-circle"></i> Informations</h4>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <h5 class="text-muted">Utilisateur</h5>
                    <table class="table table-borderless">
                        <tr>
                            <th class="text-muted" style="width: 40%;">Email:</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th class="text-muted">Rôle:</th>
                            <td>
                                {% for role in user.roles %}
                                    <span class="badge bg-info">{{ role }}</span>
                                {% endfor %}
                            </td>
                        </tr>
                    </table>
                </div>
                
                {% if client %}
                    <hr>
                    <div class="mb-3">
                        <h5 class="text-muted">Client</h5>
                        <table class="table table-borderless">
                            <tr>
                                <th class="text-muted" style="width: 40%;">Nom:</th>
                                <td><strong>{{ client.nom }}</strong></td>
                            </tr>
                            <tr>
                                <th class="text-muted">ID Client:</th>
                                <td>#{{ client.id }}</td>
                            </tr>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Right Column: Reservations -->
    <div class="col-md-8 mb-4">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0"><i class="bi bi-calendar-check"></i> Mes Réservations</h4>
                <a href="{{ path('app_reservation_new') }}" class="btn btn-light btn-sm">
                    <i class="bi bi-plus-circle"></i> Nouvelle réservation
                </a>
            </div>
            <div class="card-body">
                {% if reservations|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Date</th>
                                    <th>Heure</th>
                                    <th>Service</th>
                                    <th>Adresse</th>
                                    <th>Montant</th>
                                    <th>Statut</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for reservation in reservations %}
                                    <tr>
                                        <td>{{ reservation.date ? reservation.date|date('d/m/Y') : '' }}</td>
                                        <td>{{ reservation.heure ? reservation.heure|date('H:i') : '' }}</td>
                                        <td>{{ reservation.typeService }}</td>
                                        <td>
                                            {% if reservation.adresse|length > 30 %}
                                                {{ reservation.adresse|slice(0, 30) }}...
                                            {% else %}
                                                {{ reservation.adresse }}
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if reservation.montant %}
                                                <strong>{{ reservation.montant|number_format(2, ',', ' ') }} TND</strong>
                                            {% else %}
                                                <span class="text-muted">-</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if reservation.statut == 'En attente' %}
                                                <span class="badge bg-warning">{{ reservation.statut }}</span>
                                            {% elseif reservation.statut == 'Confirmée' %}
                                                <span class="badge bg-info">{{ reservation.statut }}</span>
                                            {% elseif reservation.statut == 'En cours' %}
                                                <span class="badge bg-primary">{{ reservation.statut }}</span>
                                            {% elseif reservation.statut == 'Terminée' %}
                                                <span class="badge bg-success">{{ reservation.statut }}</span>
                                            {% elseif reservation.statut == 'Annulée' %}
                                                <span class="badge bg-danger">{{ reservation.statut }}</span>
                                            {% else %}
                                                <span class="badge bg-secondary">{{ reservation.statut }}</span>
                                            {% endif %}
                                        </td>
                                        <td class="text-end">
                                            <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}" class="btn btn-sm btn-info">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            {% if reservation.statut == 'Terminée' and reservation.ouvrierId %}
                                                {% if avisByReservation[reservation.id] is not defined %}
                                                    <a href="{{ path('app_avis_new') }}?reservation={{ reservation.id }}" class="btn btn-sm btn-warning">
                                                        <i class="bi bi-star"></i> Noter
                                                    </a>
                                                {% else %}
                                                    <span class="badge bg-success">Avis donné</span>
                                                {% endif %}
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="alert alert-info text-center">
                        <i class="bi bi-info-circle"></i> Aucune réservation pour le moment.
                        <br>
                        <a href="{{ path('app_reservation_new') }}" class="btn btn-primary mt-2">
                            <i class="bi bi-calendar-plus"></i> Créer une réservation
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

